<% if action_name == "show" %>
<div id="<%= dom_id student %>" class="grid grid-cols-2 gap-4">
  <p class="my-2">
    <strong class="block font-medium mb-1">Curso:</strong>
    <%= student.classroom.name %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Nombre(s):</strong>
    <%= student.firstname %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Apellido(s):</strong>
    <%= student.lastname %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Nacionalidad:</strong>
    <%= student.nationality %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Sexo:</strong>
    <%= student.gender %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Fecha de Nacimiento:</strong>
    <%= student.birth_date %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Libro:</strong>
    <%= student.birth_book %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Folio:</strong>
    <%= student.birth_folio %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Parentesco con quien vive:</strong>
    <%= student.guardian_relationship %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Enfermedades:</strong>
    <%= student.alergies %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Medicamentos que usa:</strong>
    <%= student.drugs %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Contacto de emergencia:</strong>
    <%= student.emergency_contact_name %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Telefono de Emergencias:</strong>
    <%= student.emergency_contact_phone %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Fecha de ingreso:</strong>
    <%= student.check_in_date %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Fecha de retiro:</strong>
    <%= student.check_out_date %>
  </p>

  <p class="my-2">
    <strong class="block font-medium mb-1">Condici&oacute;n inicial:</strong>
    <%= translate_initial_condition(student.initial_condition) %>
  </p>
</div>

<h2 class="text-xl">Padres, Madres y/o Tutores</h2>
<div class="mb-4">
  <% @student.student_guardians.each do |guardian| %>
    <div><%= guardian.fullname %></div>
  <% end %>
</div>

<div class="my-4">
  <%= form_with(model: [@student, @student.student_guardians.build], class: "contents") do |form| %>

    <div class="my-5">
      <%= form.label :firstname %>
      <%= form.text_field :firstname, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :lastname %>
      <%= form.text_field :lastname, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :relationship %>
      <%= form.text_field :relationship, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :nid %>
      <%= form.text_field :nid, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :address %>
      <%= form.text_field :address, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :place %>
      <%= form.text_field :place, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :city %>
      <%= form.text_field :city, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :work_phone %>
      <%= form.text_field :work_phone, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :occupation %>
      <%= form.text_field :occupation, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :education_level %>
      <%= form.text_field :education_level, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :notes %>
      <%= form.text_area :notes, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit 'Guardar', class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div>

<% else %>
  <div class="flex items-center">
    <div class="flex-auto">
      <%= student.fullname %> | <%= student.nationality %> | <%= "#{student.age} AÃ±os" %>
    </div>
    <div class="flex">
      <%= link_to "Detalles", student, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Editar', edit_student_path(student), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
<% end %>
