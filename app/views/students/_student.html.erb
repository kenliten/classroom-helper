<% if action_name == "show" %>
<div id="<%= dom_id student %>" class="grid grid-cols-2 gap-4">
  <div class="my-1">
    <strong class="block font-medium mb-1">Curso:</strong>
    <%= student.classroom.name %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Nombre(s):</strong>
    <%= student.firstname %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Apellido(s):</strong>
    <%= student.lastname %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Nacionalidad:</strong>
    <%= student.nationality %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Sexo:</strong>
    <%= student.gender == 'MALE' ? 'Masculino' : 'Femenino' %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Fecha de Nacimiento:</strong>
    <%= "#{student.birth_date.day}/#{student.birth_date.month}/#{student.birth_date.year}" if student.birth_date %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Libro:</strong>
    <%= student.birth_book %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Folio:</strong>
    <%= student.birth_folio %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Parentesco con quien vive:</strong>
    <%= student.guardian_relationship %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Enfermedades:</strong>
    <%= student.alergies %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Medicamentos que usa:</strong>
    <%= student.drugs %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Contacto de emergencia:</strong>
    <%= student.emergency_contact_name %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Telefono de Emergencias:</strong>
    <%= student.emergency_contact_phone %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Fecha de ingreso:</strong>
    <%= "#{student.check_in_date.day}/#{student.check_in_date.month}/#{student.check_in_date.year}" if student.check_in_date %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Fecha de retiro:</strong>
    <%= "#{student.check_out_date.day}/#{student.check_out_date.month}/#{student.check_out_date.year}" if student.check_out_date %>
  </div>

  <div class="my-1">
    <strong class="block font-medium mb-1">Condici&oacute;n inicial:</strong>
    <%= translate_initial_condition(student.initial_condition) %>
  </div>
</div>

<% else %>
  <div class="flex items-center">
    <div class="flex-auto">
      <%= student.fullname %> | <%= student.nationality %> | <%= "#{student.age} AÃ±os" %>
    </div>
    <div class="flex">
      <%= link_to "Detalles", student, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Editar', edit_student_path(student), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
<% end %>
