<div id="<%= dom_id classroom_subject %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= classroom_subject.subject_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Classroom:</strong>
    <%= classroom_subject.classroom_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this classroom subject", classroom_subject, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this classroom subject', edit_classroom_subject_path(classroom_subject), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
