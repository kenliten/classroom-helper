<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <h2 class="text-4xl mb-4"><%= @student_guardian.fullname %></h2>

    <%= render @student_guardian %>

    <%= link_to 'Editar', edit_student_student_guardian_path(@student_guardian), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Eliminar', student_student_guardian_path(@student_guardian), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Volver', student_path(@student_guardian.student), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
