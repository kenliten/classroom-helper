<div id="<%= dom_id classroom %>">
  <% if action_name == "show" %>
  <h2 class="text-3xl my-5 cursive"><%= classroom.name %></h2>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nivel:</strong>
    <%= translate_level(classroom.level) %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Grado:</strong>
    <%= [1,3].include?(classroom.grade) ? "#{classroom.grade}ro" : [4,5,6].include?(classroom.grade) ? "#{classroom.grade}to" : "2do" %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Secci&oacute;n:</strong>
    <%= classroom.section %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Jornada:</strong>
    <%= translate_journey(classroom.journey) %>
  </p>

  <% else %>
    <div class="flex items-center my-2">
      <div style="flex: 1 auto;"><%= classroom.name %> - <%= translate_journey(classroom.journey) %></div>
      <div>
        <%= link_to 'Eliminar', classroom, data: { turbo_method: :delete, turbo_confirm: 'Deseas eliminar este curso?' }, class: "rounded-lg py-3 px-5 border border-red-500 text-red-500 hover:text-white hover:bg-red-500 inline-block font-medium" %>
        <%= link_to 'Editar', edit_classroom_path(classroom), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 border border-gray-100 inline-block font-medium" %>
        <%= link_to "Detalles", classroom, class: "rounded-lg py-3 px-5 bg-gray-100 border border-gray-100 ml-2 inline-block font-medium" %>
      </div>
    </div>
  <% end %>
</div>
