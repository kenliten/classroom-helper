<div id="<%= dom_id note %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Date:</strong>
    <%= note.date %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Time:</strong>
    <%= note.time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Grade:</strong>
    <%= note.classroom_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Place:</strong>
    <%= note.place %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= note.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Explanation:</strong>
    <%= note.explanation %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this note", note, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this note', edit_note_path(note), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
